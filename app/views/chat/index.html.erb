<div class="coord-outer">
  <div class="coord-inner">
    <%= render 'chat/inc/coord' %>
  </div>
  <div class="search-inner">
    <%= render 'chat/inc/search' %>
  </div>
</div>
<div class="chat-outer">
  <div class="chat-inner">
    <%= render 'chat/inc/chat' %>
  </div>
</div>
<script>
    var sse = new EventSource("/chat/stream");
    sse.onmessage = function(event) {
        var message_li = document.createElement("li");
        message_li.textContent = event.data;
        document.getElementById("chat_area").appendChild(message_li);
    };
</script>
